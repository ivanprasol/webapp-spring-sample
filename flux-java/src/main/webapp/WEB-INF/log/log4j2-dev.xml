<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout charset="UTF-8">
        <Pattern>%date{ABSOLUTE} %-5level %36.36logger{1.}: %msg%n%throwable</Pattern>
      </PatternLayout>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="org.ivan" level="DEBUG"/>
    <!--
    <Logger name="org.springframework" level="DEBUG"/>
    -->

    <Root level="INFO">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
